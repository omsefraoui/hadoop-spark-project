<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <!-- Metastore -->
    <property>
        <n>javax.jdo.option.ConnectionURL</n>
        <value>jdbc:derby:;databaseName=/opt/hive/metastore_db;create=true</value>
    </property>
    
    <!-- Warehouse -->
    <property>
        <n>hive.metastore.warehouse.dir</n>
        <value>hdfs://spark-master:9000/user/hive/warehouse</value>
    </property>
    
    <!-- HiveServer2 -->
    <property>
        <n>hive.server2.thrift.bind.host</n>
        <value>spark-master</value>
    </property>
    <property>
        <n>hive.server2.thrift.port</n>
        <value>10000</value>
    </property>
    <property>
        <n>hive.server2.webui.host</n>
        <value>spark-master</value>
    </property>
    <property>
        <n>hive.server2.webui.port</n>
        <value>10002</value>
    </property>
    
    <!-- Metastore Service -->
    <property>
        <n>hive.metastore.uris</n>
        <value>thrift://spark-master:9083</value>
    </property>
    
    <!-- Execution Engine -->
    <property>
        <n>hive.execution.engine</n>
        <value>mr</value>
    </property>
    
    <!-- Support for Spark SQL -->
    <property>
        <n>hive.metastore.schema.verification</n>
        <value>false</value>
    </property>
</configuration>
